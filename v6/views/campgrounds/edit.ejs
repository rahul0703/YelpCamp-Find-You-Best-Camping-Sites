<%- include("../partials/header") %>

<div class= "container">
	<div class = "row">
		<h1> <center> Edit<%= campground.name %> </center></h1>
		<div style=  "width: 30%; margin: 25 auto">
		<form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
			<div class="form-group">
    			<input type="text"  class="form-control"  name = "campground[name]" value = "<%= campground.name %>">
  			</div>
			<div class="form-group">
    			<input type="text" class="form-control"   name = "campground[image]" value = "<%= campground.image %>">
  			</div>
			<div class="form-group">
    			<input type="number" class="form-control"  value="<%= campground.price %>" name = "campground[price]" min= "1" step = "1">
  			</div>
			<div class="form-group">
    			<input type="text" class="form-control"   name = "campground[description]" value = "<%= campground.description %>">
  			</div>
			<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href= "/campgrounds">Go Back</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>